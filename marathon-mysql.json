{
  "id": "/ghost/mysql",
  "container": {
    "docker": {
      "image": "mysql:5.7",
      "portMappings": [
        {
          "containerPort": 3306,
          "protocol": "tcp",
          "name": "mysql",
          "labels": {
            "VIP_0": "/ghost/mysql:3306"
          }
        }
      ],
      "network": "BRIDGE"
    }
  },
  "env": {
    "MYSQL_ROOT_PASSWORD": "root",
    "MYSQL_DATABASE": "db",
    "MYSQL_USER": "blog-user",
    "MYSQL_PASSWORD": "supersecret"
  },
  "cpus": 1,
  "mem": 1024,
  "disk": 0
}
