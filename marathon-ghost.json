{
  "id": "/ghost/blog",
  "container": {
    "docker": {
      "image": "janr/ghost",
      "forcePullImage": true,
      "portMappings": [
        {
          "containerPort": 2368,
          "protocol": "tcp"
        }
      ],
      "network": "BRIDGE"
    }
  },
  "env": {
    "GHOST_URL": "http://public-vhost",
    "MYSQL_HOST": "ghostmysql.marathon.l4lb.thisdcos.directory",
    "MYSQL_DATABASE": "db",
    "MYSQL_USER": "blog-user",
    "MYSQL_PASSWORD": "supersecret"
  },
  "labels": {
   "HAPROXY_0_VHOST": "public-vhost",
   "HAPROXY_GROUP": "external"
 },
  "cpus": 1,
  "mem": 512,
  "disk": 0
}
